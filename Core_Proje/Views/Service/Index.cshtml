@model List<Service>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}
<div class="card-header border-0">
    <h3 class="mb-0">Hizmet Listesi</h3>
</div>

<div class="table-responsive">
    <table class="table align-items-center table-flush">
        <thead >
            <tr>
                <th scope="col" class="sort" data-sort="name">ID</th>
                <th scope="col" class="sort" data-sort="budget">Başlık</th>
                <th scope="col">Sil</th>
                <th scope="col" class="sort" data-sort="completion">Düzenle</th>
            </tr>
        </thead>
        <tbody class="list">
            @foreach (var item in Model)
            {
                <tr>
                    <th>
                        @item.ServiceID
                    </th>

                    <th class="budget">
                        @item.Title
                    </th>
                    <td><a asp-controller="Service" asp-action="DeleteService" asp-route-id="@item.ServiceID" class="btn btn-danger">Sil</a></td>
                    <td><a asp-controller="Service" asp-action="UpdateService" asp-route-id="@item.ServiceID" class="btn btn-success">Güncelle</a></td>
                </tr>

            }

        </tbody>
    </table>
    <br />
<a asp-controller="Service" asp-action="AddService" class="btn btn-primary ">Yeni Hizmet Ekle</a>
</div>