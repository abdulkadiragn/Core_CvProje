@model Service
@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}
<div class="card-header border-0">
    <h3 class="mb-0">Hizmet Düzenleme</h3>
</div>
@using (Html.BeginForm("UpdateService", "Service", FormMethod.Post))
{
    //Html tag halperlar ile form oluşturuldu
    @Html.HiddenFor(x => x.ServiceID)
    <br />
    @Html.Label("Hizmet Başlığı")
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />
    <label>Resim url</label>
    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
    <br />
    <button class="btn btn-primary">Güncelle</button>
}