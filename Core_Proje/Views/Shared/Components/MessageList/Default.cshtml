@model List<Message>
<div class="col-md-12 col-xl-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="d-flex flex-row justify-content-between">
                <h4 class="card-title">Mesajlar</h4>
                <a href="/Contact/Index/"> <p class="text-muted mb-1 small">Tümünü görüntüle</p> </a>
            </div>
            @foreach (var item in Model)
            {
                <div class="preview-list">
                    <div class="preview-item border-bottom">
                        <div class="preview-thumbnail">
                            <img src="https://st3.depositphotos.com/6672868/14655/v/450/depositphotos_146556543-stock-illustration-user-profile-symbol.jpg" alt="image" class="rounded-circle" />
                        </div>
                        <div class="preview-item-content d-flex flex-grow">
                            <div class="flex-grow">
                                <div class="d-flex d-md-block d-xl-flex justify-content-between">
                                    <h6 class="preview-subject">@item.Name</h6>
                                    <p class="text-muted text-small">@(((DateTime)item.Date).ToString("dd-MMM-yyyy"))</p>
                                </div>
                                <p class="text-muted">@item.Content.Substring(0,5)...</p>
                            </div>
                        </div>
                    </div>
                </div>

            }
        </div>
    </div>
</div>
