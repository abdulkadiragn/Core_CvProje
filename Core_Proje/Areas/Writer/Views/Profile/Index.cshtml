@model Core_CvPRoje.Areas.Writer.Models.UserEditViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Profil bilgileri Düzenleme</h4>
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="exampleInputName1">Adınız</label>
                    <input type="text" asp-for="Name" class="form-control" id="exampleInputName1" placeholder="Ad">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Soyadınız</label>
                    <input type="text" asp-for="Lastname" class="form-control" id="exampleInputName1" placeholder="Soyad">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Yeni şifre</label>
                    <input type="password" asp-for="Password" class="form-control" id="exampleInputName1" placeholder="Yeni şifreniz">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Yeni şifre tekrar</label>
                    <input type="password" asp-for="PasswordConfirm" class="form-control" id="exampleInputName1" placeholder="Yeni şifre tekrar">
                </div>
                <div class="form-group">
                    <label>Resim yükle alanı</label>
                    <input type="file" asp-for="Picture">
                    @*<div class="input-group col-xs-12">
                        <input type="text" class="form-control file-upload-info" disabled placeholder="Resim yükleme alanı">
                        <span class="input-group-append">
                            <button class="file-upload-browse btn btn-primary" type="button">Yükle</button>
                        </span>
                    </div>*@
                </div>
                
                
                <button type="submit" class="btn btn-primary mr-2">Güncelle</button>
                <button class="btn btn-light">İptal</button>
            </form>
        </div>
    </div>
</div>
